<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/monster_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pikachu"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/monster_hp_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="HP : 234"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/monster_name_text_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/monster_atk_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ATK : 234"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/monster_hp_text_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/monster_def_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="DEF : 555"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintTop_toBottomOf="@id/monster_atk_text_view"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/monster_element_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Element : Fire"
        app:layout_constraintTop_toBottomOf="@id/monster_def_text_view"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>